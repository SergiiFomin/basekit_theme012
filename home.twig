                                                {{widget('content', 'price-text1', {content: '<p>Cum sociis natoque penatibus et magnis dis parturient montes ascetur ridiculus mus. Nulla dui. Fusce feugiat malesuada odio.</p>', lines: 'all'})|raw}}
                                                {{widget('button', 'price-button2', {italic: false, text:'read more', 'align':'widget-align-center'})|raw}}
                                            </div>
                                            
                                            {{widget('space', 'space', {'height': '50'})|raw}}

                                        </article>

                                        <article class="span3">

                                            <div class="price">
                                                {{widget('image', 'price-image1', { 'src': asset('images/icon3.png'), 'imageWidth': '55px'})|raw}}
                                                <div class="title">
                                                    {{widget('content', 'price-title1', {content: '<h5>great</h5>', lines: 'all'})|raw}}
                                                    {{widget('content', 'price-title1', {content: '<h5>service</h5>', lines: 'all'})|raw}}
                                                </div>
                                                {{widget('content', 'price-text1', {content: '<p>Cum sociis natoque penatibus et magnis dis parturient montes ascetur ridiculus mus. Nulla dui. Fusce feugiat malesuada odio.</p>', lines: 'all'})|raw}}
                                                {{widget('button', 'price-button3', {italic: false, text:'read more', 'align':'widget-align-center'})|raw}}
                                            </div>
                                            
                                            {{widget('space', 'space', {'height': '50'})|raw}}

                                        </article>

                                        <article class="span3">

                                            <div class="price">
                                                {{widget('image', 'price-image1', { 'src': asset('images/icon4.png'), 'imageWidth': '44px'})|raw}}
                                                <div class="title">
                                                    {{widget('content', 'price-title1', {content: '<h5>best</h5>', lines: 'all'})|raw}}
                                                    {{widget('content', 'price-title1', {content: '<h5>cooks</h5>', lines: 'all'})|raw}}
                                                </div>
                                                {{widget('content', 'price-text1', {content: '<p>Cum sociis natoque penatibus et magnis dis parturient montes ascetur ridiculus mus. Nulla dui. Fusce feugiat malesuada odio.</p>', lines: 'all'})|raw}}
