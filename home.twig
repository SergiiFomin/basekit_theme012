                                </div>
                                
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>

                            <article class="span3">

                                <div class="banner color2 new">

                                    {{widget('content', 'text7', {content: '<span class="text-xlb">cater your next party with</span>', lines: 'all'})|raw}}
                                    {{widget('content', 'text8', {content: '<span class="text-l">&#147;La Panorama&#148;</span>', lines: 'all'})|raw}}

                                </div>
                                
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>

                            <article class="span3">

                                <div class="banner color3">

                                    {{widget('content', 'text9', {content: '<span class="text-xlb">lunch from $5.99</span>', lines: 'all'})|raw}}
                                    {{widget('content', 'text10', {content: '<span class="text-m">Try our delicious lunch menu from just $5.99</span>', lines: 'all'})|raw}}

                                </div>
                                
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>

                            <article class="span3">

                                <div class="banner color4">

                                    {{widget('content', 'text11', {content: '<span class="text-lb">25% off for students all year!</span>', lines: 'all'})|raw}}
                                    {{widget('content', 'text12', {content: '<span class="text-s">Plus enjoy our other tempting student offers</span>', lines: 'all'})|raw}}

                                </div>
                                
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>

                        </div>

                    </section>

                </div>

            </div>

        </div>

        <!--footer-->
        <footer>

            <div class="container">

                <div class="row">

                    <section class="span12">

                        <div class="row">

                            <article class="span8">

                                {{widget('companyname', 'companyname', {"business": "La Panorama"})|raw}}
                                {{widget('content', 'copyright_copy', {content: '&nbsp;&copy;&nbsp;2013', lines: 'all'})|raw}}
                                {{widget('content', 'copyright_link', {content: '<a href="#">Privacy Policy</a>', lines: 'all'})|raw}}
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>

                            <article class="span4">

                                {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com', 'rss': '#'})|raw}}
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>

                        </div>

                    </section>

                </div>

            </div>

        </footer>

    </div>
    
</div>

