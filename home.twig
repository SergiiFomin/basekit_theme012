                                    {{widget('space', 'space', {'height': '50'})|raw}}

                                    <div class="row services center">

                                        <article class="span3">

                                            <div class="price">
                                                {{widget('image', 'price-image1', { 'src': asset('images/icon1.png'), 'imageWidth': '50px'})|raw}}
                                                <div class="title">
                                                    {{widget('content', 'price-title1', {content: '<h5>Traditional</h5>', lines: 'all'})|raw}}
                                                    {{widget('content', 'price-title1', {content: '<h5>cuisine</h5>', lines: 'all'})|raw}}
                                                </div>
                                                {{widget('content', 'price-text1', {content: '<p>Cum sociis natoque penatibus et magnis dis parturient montes ascetur ridiculus mus. Nulla dui. Fusce feugiat malesuada odio.</p>', lines: 'all'})|raw}}
                                                {{widget('button', 'price-button1', {italic: false, text:'read more', 'align':'widget-align-center'})|raw}}
                                            </div>

                                            {{widget('space', 'space', {'height': '50'})|raw}}

                                        </article>

                                        <article class="span3">

                                            <div class="price">
                                                {{widget('image', 'price-image2', { 'src': asset('images/icon2.png'), 'imageWidth': '78px'})|raw}}
                                                <div class="title">
                                                    {{widget('content', 'price-title1', {content: '<h5>good</h5>', lines: 'all'})|raw}}
                                                    {{widget('content', 'price-title1', {content: '<h5>rest</h5>', lines: 'all'})|raw}}
